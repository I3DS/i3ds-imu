function(ASN1CC_GENERATE_C SRCS HDRS ASN_OUTPUT_DIR)
  if(NOT ARGN)
    message(SEND_ERROR "Error: ASN1CC_GENERATE_C() called without any ASN.1 files")
    return()
  endif()

  set (_asn1cc_files)

  # Create an include path for each file specified
  foreach(FIL ${ARGN})
    get_filename_component(ABS_FIL ${FIL} ABSOLUTE)
    list(FIND _asn1cc_files ${ABS_FIL} _contains_already)
    if(${_contains_already} EQUAL -1)
      list(APPEND _asn1cc_files ${ABS_FIL})
    endif()
  endforeach()

  set(${SRCS}
    "${ASN_OUTPUT_DIR}/asn1crt.c"
    "${ASN_OUTPUT_DIR}/acn.c"
    "${ASN_OUTPUT_DIR}/real.c")

  set(${HDRS}
    "${ASN_OUTPUT_DIR}/asn1crt.h")

  foreach(FIL ${_asn1cc_files})
    get_filename_component(ABS_FIL ${FIL} ABSOLUTE)
    get_filename_component(FIL_WE ${FIL} NAME_WE)

    list(APPEND ${SRCS} "${ASN_OUTPUT_DIR}/${FIL_WE}.c")
    list(APPEND ${HDRS} "${ASN_OUTPUT_DIR}/${FIL_WE}.h")

  endforeach()

  add_custom_command(
    OUTPUT "${ASN_OUTPUT_DIR}/asn1crt.c"
    "${ASN_OUTPUT_DIR}/asn1crt.h"
    COMMAND mkdir -p ${ASN_OUTPUT_DIR}
    COMMAND ${ASN1CC_EXECUTABLE} -c -uPER -o ${ASN_OUTPUT_DIR} ${_asn1cc_files}
    DEPENDS ${_asn1cc_files} ${ASN1CC_EXECUTABLE}
    COMMENT "Generating ASN.1 uPER codec using ASN1CC compiler"
    VERBATIM )

  set_source_files_properties(${${SRCS}} ${${HDRS}} PROPERTIES GENERATED TRUE)
  set(${SRCS} ${${SRCS}} PARENT_SCOPE)
  set(${HDRS} ${${HDRS}} PARENT_SCOPE)

endfunction()

